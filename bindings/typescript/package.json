{
  "name": "@siviter-xyz/joyous-departures",
  "version": "1.6.1",
  "description": "Generate warm, heartfelt goodbye messages for email templates",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "types": "./dist/index.d.mts"
    }
  },
  "files": [
    "pkg",
    "dist"
  ],
  "sideEffects": false,
  "readme": "README.md",
  "keywords": [
    "goodbye",
    "sign-off",
    "messages",
    "email",
    "templates"
  ],
  "author": "siviter.xyz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/siviter-xyz/joyous-departures"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsdown": "^0.17.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-plugin-wasm": "^3.2.2",
    "vitest": "^2.0.0"
  },
  "scripts": {
    "build": "bash scripts/build-package.sh",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests",
    "format": "prettier --write src tests"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
