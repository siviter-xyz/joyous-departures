#!/bin/bash
# Pre-commit hook to run linting checks
# This ensures code quality before commits

set -e

# Get the repository root
REPO_ROOT="$(git rev-parse --show-toplevel)"
cd "$REPO_ROOT"

# Run linting checks (same as CI)
echo "üîç Running pre-commit linting checks..."
echo ""

if [ -f "$REPO_ROOT/scripts/lint.sh" ]; then
    "$REPO_ROOT/scripts/lint.sh"
else
    echo "‚ùå Error: scripts/lint.sh not found!"
    echo "   Make sure you're in the repository root."
    exit 1
fi

echo ""
echo "‚úÖ Pre-commit checks passed! Proceeding with commit..."

