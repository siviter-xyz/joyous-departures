{
  "name": "@siviter-xyz/joyous-departures",
  "version": "2.0.0",
  "description": "Generate warm, heartfelt goodbye messages for email templates",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "goodbye",
    "sign-off",
    "messages",
    "email",
    "templates",
    "cloudflare-workers"
  ],
  "author": "siviter.xyz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/siviter-xyz/joyous-departures.git"
  },
  "homepage": "https://github.com/siviter-xyz/joyous-departures",
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}

